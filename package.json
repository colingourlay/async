{
  "name": "async",
  "private": true,
  "engines": {
    "node": ">= 7.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-external-helpers": "^6.24.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-es2016": "^6.24.0",
    "babel-preset-es2017": "^6.24.0",
    "chokidar-cli": "^1.2.0",
    "del": "^2.2.2",
    "lerna": "2.0.0-beta.38",
    "rollup": "^0.41.4",
    "rollup-plugin-async": "^1.2.0",
    "rollup-plugin-babel": "^2.6.1",
    "tape": "^4.6.3",
    "xo": "^0.18.1"
  },
  "scripts": {
    "build": "node scripts/build",
    "start": "chokidar 'src' --command 'npm run build' --initial --silent",
    "test": "node test && xo"
  },
  "xo": {
    "envs": [
      "node",
      "es6"
    ],
    "ignores": [
      "packages/**",
      "scripts/**",
      "test/**"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-await-in-loop": 0
    },
    "space": 2
  }
}
